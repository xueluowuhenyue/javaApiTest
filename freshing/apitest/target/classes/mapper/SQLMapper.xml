    <!--获取登陆接口case-->
    <select id="loginCase" parameterType="Integer"  resultType="com.course.model.LoginCase">

        select * from LoginCase
        where id = #{id};
    </select>
<!--    &lt;!&ndash;添加用户接口case&ndash;&gt;-->
    <select id="addUserCase" parameterType="Integer" resultType="com.course.model.AddUserCase">
        select * from AddUserCase where id=#{id};
    </select>

    <select id="selectUser" resultType="com.course.model.LoginCase">
        select * from LoginCase;
    </select>

    <select id="getUser" parameterType="String" resultType="com.course.model.LoginCase">
        select * from LoginCase where id = (select id from LoginCase where userName=#{userName});
    </select>

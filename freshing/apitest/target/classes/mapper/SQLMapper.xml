<!--    &lt;!&ndash;添加用户接口&ndash;&gt;-->
    <select id="addUser" parameterType="com.course.model.AddUserCase" resultType="com.course.model.User">
        select * from User where
        userName=#{userName}
        and password=#{password}
        and sex=#{sex}
        and age=#{age}
        and permission=#{permission}
        and isDelete=#{isDelete};

    </select>



    <insert id="insertUser" parameterType="com.course.model.AddUserCase">
        insert into User(id,userName,password,age,sex)
        values (#{id},#{userName},#{password},#{sex},#{age});
    </insert>

